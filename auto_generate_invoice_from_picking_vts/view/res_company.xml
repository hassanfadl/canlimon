<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_generate_invoice_for_account_invoice_res_company_form" model="ir.ui.view">
        <field name="name">Auto Invoice Generate Configuration</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Auto Invoice Config">
                    <group>
                        <field name="auto_generate_invoice"/>
                        <field name="invoice_generated_on" attrs="{'invisible':[('auto_generate_invoice','!=',True)]}"/>
                    </group>
                    <group>
                        <field name="auto_generate_bill"/>
                        <field name="bill_generated_on" attrs="{'invisible':[('auto_generate_bill','!=',True)]}"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>