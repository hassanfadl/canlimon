<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="id_base_view_partner_form_in" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="area_id"/>
                <field name="customer_type_id"/>
                <field name="governorate_id"/>
                <field name="shop_name"/>
                <field name="password"/>
                <field name="token" invisible="1"/>
                <field name="otp" invisible="1"/>
                <field name="x"/>
                <field name="y"/>
                <field name="viitas"/>
                <field name="viitas_action"/>
                <field name="area_id"/>
                <field name="sale_order_count"/>
                <field name="sales_order_amount"/>
                <field name="avr_sales"/>
            </xpath>
            <page name="sales_purchases" position="after">
                <page string=" Rate">
                    <field name="rate_ids" readonly="1">
                        <tree editable="top">
                            <field name="date"/>
                            <field name="rate_state" widget="priority"/>
                            <field name="commit"/>
                            <field name="order_id"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

    <record id="id_erea_act" model="ir.actions.act_window">
        <field name="name">area</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">area.area</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
            <p>
            </p>
        </field>
    </record>

    <menuitem id="id_erea_menuitem" name="Areas" action="id_erea_act" sequence="1" parent="sale.menu_sale_config"/>
    odooact
    <record id="id_customer_type" model="ir.actions.act_window">
        <field name="name">acustomer type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
            <p>
            </p>
        </field>
    </record>

    <menuitem id="id_customer_type_menuitem" name="customer Type" action="id_customer_type" sequence="1"
              parent="sale.menu_sale_config"/>

    <record id="product_category_view_form_inherit" model="ir.ui.view">
        <field name="name">product category view form inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div" position="after">
                <field name="image_1920" widget="image" class="oe_avatar"
                       force_save="1"/>
                <field name="attachment_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="brand_ids" widget="many2many_tags"/>
                <field name="is_soon"/>
                <field name="customer_type_ids" widget="many2many_tags"/>
                <field name="sequence"/>
            </xpath>
        </field>
    </record>
    <record id="id_view_ae_stock_waehouse_form_ept" model="ir.ui.view">
        <field name="name">stock.ae.warehouse.form.ept</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="stock_id"/>
                <field name="area_ids" widget="many2many_tags"/>
                <field name="sale_order_amount" invisible="1"/>
                <field name="hab_id"/>
            </field>
        </field>
    </record>

    <record id="id_product_template_only_form_view_inh" model="ir.ui.view">
        <field name="name">product.template.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="customer_type_ids" widget="many2many_tags"/>
                <field name="sequence"/>
                <field name="free_qty"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Price of unit">
                    <group>
                        <field name="uom_ids">
                            <tree editable="top">
                                <field name="warehouse_id" invisible="1"/>
                                <field name="uom_id"/>
                                <field name="price"/>
                            </tree>
                        </field>
                    </group>
                </page>
                <page string="Product Related">
                    <group>
                        <field name="related_product" widget="many2many_tags"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Discount">
                    <group>
                        <group>
                            <field name="is_discount"/>
                            <field name="percentage" attrs="{'invisible': [('is_discount', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="date_start"
                                   attrs="{'required': [('is_discount', '!=', False)],'invisible': [('is_discount', '=', False)]}"/>
                            <field name="price_discount" attrs="{'invisible': [('is_discount', '=', False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[@name='general_information']/group" position="after">

                <group string="Notes">
                    <field name="note" nolabel="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="id_view_partner_form_inh" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_verified" string="VERIFIED"/>
                <field name="verified_date"/>
            </xpath>
        </field>
    </record>

    <record id="id_product_brand_inventory_product_brand_view" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">product.brand</field>
        <field name="inherit_id" ref="product_brand_inventory.product_brand_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_count']" position="after">
                <field name="customer_type_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

