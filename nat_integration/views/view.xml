    <record id="id_sale_coupon_program_view_promo_program_form" model="ir.ui.view">
        <field name="name">coupon.program.form</field>
        <field name="model">coupon.program</field>
        <field name="inherit_id" ref="coupon.coupon_program_view_promo_program_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                <group>
                    <group>
                        <field name="attachment_id"/>
                    </group>
                    <group></group>
                </group>
            </xpath>
            <xpath expr="//div" position="after">
                <field name="image_1920" widget="image" class="oe_avatar"
                       force_save="1"/>
                <field name="attachment_id" invisible="1"/>
            </xpath>
        </field>
    </record>
    <record id="acquirer_form_sips" model="ir.ui.view">
        <field name="name">acquirer.form.sips</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="is_bee"/>
            </xpath>
        </field>
    </record>
    <record id="sale_order_inherited_form_purchase" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.purchase</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group" position="inside">
                <field name="is_allowed" invisible="1"/>

                <field name="delivery_date"/>
                <field name="payment_method_type"/>
                <field name="bee_code" attrs="{'invisible': [('payment_method_type', '!=', 'بي')]}" readonly="1"/>
                <field name="is_paid"/>
                <field name="area_id"/>
                <field name="is_done" invisible="1"/>
                <button type="object" name="action_location" class="btn-primary" icon="fa-truck" string="Location"/>

            </xpath>
        </field>
    </record>

    <record id="id_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.management</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='connectors_setting_container']" position="after">
                <h2 class="mt32">Order</h2>
                <div class="row mt16 o_settings_container" id="connectors_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16" id="nat_nat">
                                    <span>
                                        <label for="last_delivery" class="oe_inline"/>
                                        <field name="last_delivery" class="oe_inline" widget="timesheet_uom"/>
                                    </span>
                                    <br/>
                                    <span>
                                        <label for="minimum_order" class="oe_inline"/>
                                        <field name="minimum_order" class="oe_inline"/>
                                    </span>
                                    <br/>
                                    <span>
                                        <label for="minimum_product" class="oe_inline"/>
                                        <field name="minimum_product" class="oe_inline"/>
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2 class="mt32">Version</h2>
                <div class="row mt16 o_settings_container" id="connectors_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16" id="nat_nat">
                                    <span>
                                        <label for="version_number" class="oe_inline"/>
                                        <field name="version_number" class="oe_inline"/>
                                    </span>
                                    <br/>
                                    <span>
                                        <label for="version_code" class="oe_inline"/>
                                        <field name="version_code" class="oe_inline"/>
                                    </span>
                                    <br/>
                                    <span>
                                        <label for="force_update" class="oe_inline"/>
                                        <field name="force_update" class="oe_inline"/>
                                    </span>
                                    <br/>
                                    <span>
                                        <label for="under_maintenance" class="oe_inline"/>
                                        <field name="under_maintenance" class="oe_inline"/>
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2 class="mt32">Advertiments</h2>
                <div class="row mt16 o_settings_container" id="connectors_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16" id="advertiments">
                                    <span>
                                        <label for="advertiments" class="oe_inline"/>
                                        <field name="advertiments" class="oe_inline"/>
                                    </span>
                                    <br/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2 class="mt32">OTP</h2>
                <div class="row mt16 o_settings_container" id="connectors_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16" id="otp_default">
                                    <span>
                                        <label for="otp_default" class="oe_inline"/>
                                        <field name="otp_default" class="oe_inline"/>
                                    </span>
                                    <br/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="id_promotion_frist_form" model="ir.ui.view">
        <field name="name">promotion frist</field>
        <field name="model">promotion.frist</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"
                           force_save="1"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="attachment_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="id_promotion_frist_act" model="ir.actions.act_window">
        <field name="name">Advertiments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">promotion.frist</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="id_promotion_frist_menu" name="advertisements" parent="sale.product_menu_catalog"
              action="id_promotion_frist_act" sequence="3"/>

    <record id="id_test_test" model="ir.cron">
        <field name="name">test_test</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">model.testtest()</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="id_account_analytic_account_view_form_inherit" model="ir.ui.view">
        <field name="name">account.analytic.account.form.inherit</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field eval="18" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="area_id"/>
            </xpath>
        </field>
    </record>


</odoo>

