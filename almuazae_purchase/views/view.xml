        <!--                <xpath expr="//field[@name='vat']" position="after">-->
        <!--                    <field name="is_verified"/>-->
        <!--                </xpath>-->
        <!--            </field>-->
        <!--        </record>-->
        <record id="id_view_product_template_custom" model="ir.ui.view">
            <field name="name">view.product.template.custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='seller_ids']" position="after">
                    <label for="vendor_id"/>
                    <field name="vendor_id"/>
                </xpath>
            </field>
        </record>
        <record id="id_res_config_settings_view_form_id" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sale.management</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='connectors_setting_container']" position="after">
                    <!--                <h2 class="mt32">Order</h2>-->
                    <div class="row mt16 o_settings_container" id="connectors_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="mt16">
                                        <span>
                                            <label for="avr_sales_day" class="oe_inline"/>
                                            <field name="avr_sales_day" class="oe_inline"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
